

<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-7">

            <h1>Añade tu Cafetría favorita</h1>

            <hr>

            <form method="POST" action="/crear-cafe">

                <div class="form-group">
                    <label for="name">Nombre de la cafetería</label>
                    <input name="name" type="text" class="form-control" id="name">
                </div>

                <div class="form-group">
                    <label for="description">Descripción. ¿Que la hace especial?</label>
                    <input name="description" type="text" class="form-control" id="description">
                </div>
                <div class="form-row">
                    <div class="col">

                        <div class="form-group">
                            <label for="latitude">Latitud</label>
                            <input name="latitude" type="text" class="form-control" id="latitude">
                        </div>

                    </div>
                    <div class="col">

                        <div class="form-group">
                            <label for="longitude">Longitud</label>
                            <input name="longitude" type="text" class="form-control" id="longitude">
                        </div>
                    </div>
                </div>

              

                <button type="submit" class="btn btn-dark">Crea tu Cafetería</button>
            </form>

        </div>
    </div>


</div>